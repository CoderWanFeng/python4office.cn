/* 
科技感UI样式表
主色调：深蓝色 + 渐变效果 + 半透明
*/

/* 全局样式 */
QMainWindow, QWidget {
    background-color: #1e1e2e;
    color: #ffffff;
    font-family: "Microsoft YaHei", Arial, sans-serif;
    font-size: 14px;
}

/* 标题标签 */
#title_label {
    color: #7dd3fc;
    font-size: 24px;
    font-weight: bold;
    padding: 10px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
                stop:0 #1e3a8a, stop:1 #1e1e2e);
    border-radius: 8px;
    border: 1px solid #3b82f6;
}

/* 按钮样式 */
QPushButton {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #3b82f6, stop:1 #1e40af);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    font-weight: bold;
    min-height: 32px;
}

QPushButton:hover {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #60a5fa, stop:1 #2563eb);
    box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3);
}

QPushButton:pressed {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #2563eb, stop:1 #1e3a8a);
}

QPushButton:disabled {
    background-color: #475569;
    color: #94a3b8;
}

/* 特殊按钮 */
QPushButton[type="primary"] {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #10b981, stop:1 #059669);
}

QPushButton[type="primary"]:hover {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #34d399, stop:1 #10b981);
}

QPushButton[type="danger"] {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #ef4444, stop:1 #dc2626);
}

QPushButton[type="danger"]:hover {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #f87171, stop:1 #ef4444);
}

/* 输入框样式 */
QLineEdit, QTextEdit, QComboBox, QSpinBox {
    background-color: #0f172a;
    color: #e2e8f0;
    border: 2px solid #334155;
    border-radius: 6px;
    padding: 8px;
    selection-background-color: #3b82f6;
}

QLineEdit:focus, QTextEdit:focus, QComboBox:focus, QSpinBox:focus {
    border: 2px solid #60a5fa;
    background-color: #1e293b;
    box-shadow: 0 0 8px rgba(96, 165, 250, 0.5);
}

/* 下拉框 */
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 30px;
    border-left-width: 2px;
    border-left-color: #334155;
    border-left-style: solid;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    background-color: #1e293b;
}

QComboBox::down-arrow {
    width: 10px;
    height: 10px;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDEyIDgiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0xIDFMNiA2TDExIDEiIHN0cm9rZT0iIzYwYTVmYSIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
}

QComboBox QAbstractItemView {
    background-color: #0f172a;
    color: #e2e8f0;
    border: 2px solid #334155;
    selection-background-color: #3b82f6;
    selection-color: white;
    border-radius: 6px;
}

/* 分组框 */
QGroupBox {
    font-weight: bold;
    font-size: 16px;
    color: #7dd3fc;
    border: 2px solid #334155;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 12px;
    background-color: rgba(15, 23, 42, 0.5);
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 8px;
    background-color: #1e1e2e;
}

/* 进度条 */
QProgressBar {
    border: 2px solid #334155;
    border-radius: 6px;
    text-align: center;
    color: white;
    background-color: #0f172a;
}

QProgressBar::chunk {
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #3b82f6, stop:0.5 #60a5fa, stop:1 #3b82f6);
    border-radius: 4px;
}

/* 复选框 */
QCheckBox {
    color: #e2e8f0;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    background-color: #0f172a;
    border: 2px solid #334155;
    border-radius: 4px;
}

QCheckBox::indicator:hover {
    border: 2px solid #60a5fa;
}

QCheckBox::indicator:checked {
    background-color: #3b82f6;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTQiIGhlaWdodD0iMTAiIHZpZXdCb3g9IjAgMCAxNCAxMCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEzIDAuNUw0LjUgOUwxIDUuNSIgc3Ryb2tlPSJ3aGl0ZSIgc3Ryb2tlLXdpZHRoPSIyIiBzdHJva2UtbGluZWNhcD0icm91bmQiIHN0cm9rZS1saW5lam9pbj0icm91bmQiLz4KPC9zdmc+);
}

/* 滚动条 */
QScrollBar:vertical {
    background-color: #0f172a;
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #334155;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background-color: #475569;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #0f172a;
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #334155;
    min-width: 20px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #475569;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* 分割线 */
QFrame[frameShape="4"] {
    color: #334155;
    background-color: #334155;
    height: 2px;
    border: none;
}

/* 提示框样式 */
QMessageBox {
    background-color: #1e1e2e;
    color: #e2e8f0;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* 文件对话框 */
QFileDialog {
    background-color: #1e1e2e;
    color: #e2e8f0;
}

QFileDialog QLineEdit, QFileDialog QListView, QFileDialog QTreeView {
    background-color: #0f172a;
    color: #e2e8f0;
    border: 1px solid #334155;
}

/* 动画效果 */
* {
    transition: all 0.2s ease;
}

/* 特殊发光效果 */
QPushButton:hover, QLineEdit:focus, QTextEdit:focus {
    animation: glow 0.3s ease-in-out;
}

@keyframes glow {
    0% { box-shadow: none; }
    50% { box-shadow: 0 0 10px rgba(59, 130, 246, 0.8); }
    100% { box-shadow: none; }
}